<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <update handle="banner_slider_menu"/>
    <head>
        <css src="Hryvinskyi_BannerSliderAdminUi::css/lib/img-comparison-slider/styles.css"/>
        <script src="Hryvinskyi_BannerSliderAdminUi::js/lib/img-comparison-slider/index.js"/>
    </head>
    <body>
        <referenceBlock name="hryvinskyi.banner.slider.menu">
            <arguments>
                <argument name="menu_title" xsi:type="string" translate="true">Banner Slider: Edit Banner</argument>
                <argument name="items" xsi:type="array">
                    <item name="banners" xsi:type="array">
                        <item name="class" xsi:type="array">
                            <item name="current" xsi:type="boolean">true</item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="content">
            <uiComponent name="hryvinskyi_banner_slider_banner_form"/>
        </referenceContainer>
    </body>
</page>
